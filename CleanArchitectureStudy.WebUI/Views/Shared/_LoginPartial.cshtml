@if(Context.User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a 
            asp-area="" 
            asp-controller="Account" 
            asp-action="Logout" 
            class="nav-link text-capitalize" 
            style="color: blue"
        >
            @Context.User.Identity.Name - Logout
        </a>
    </li>   
}
else
{
    <li class="nav-item">
        <a 
            asp-area="" 
            asp-controller="Account" 
            asp-action="Login" 
            class="nav-link text-capitalize" 
            style="color: blue"
        >
            Login
        </a>
    </li> 
}